<h1>New snapshot</h1>

<% form_for(@snapshot, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :checksum %><br />
    <%= f.text_field :checksum %>
  </p>

  <p>
    <%= f.label :site_id %><br />
	<%=  collection_select(:snapshot, :site_id, Site.find(:all), :id, :url, {:prompt => true}) %>
  </p>
 <%= f.file_field :photo%>

  <p>
    <%= f.submit "Create" %>
  </p>

<% end %>

<%= link_to 'Back', snapshots_path %>
